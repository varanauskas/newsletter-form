{% extends 'base.html.twig' %}

{% block title %}Edit subscription{% endblock %}

{% block header %}
<style>
    .container {
        text-align: center;
        width: 512px;
        margin: 0 auto;
    }
    form ul li {
        background-color: rgb(255, 146, 146);
        padding: 1rem 0;
        margin-bottom: 2rem;
    }
</style>
{% endblock %}


{% block body %}
    <h1>Edit subscription</h1>
    <a href="{{ path('admin') }}">Return to subscriptions</a>
    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="success">
                {{ message }}
            </div>
        {% endfor %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}